---
const { img, title, desc, date } = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div class="article-card">
  <figure>
    <Image src={img} alt={title} width="350" aspectRatio="4:3" loading="lazy" />
  </figure>
  <div class="text">
    <p class="title">
      {title}
    </p>
    <p class="desc">{desc}</p>
    <p>
      {date}
    </p>
  </div>
</div>

<style>
  .article-card {
    display: grid;
    place-items: center;
    place-content: center;
    gap: var(--size-2);
  }
  img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-3);
  }

  .text {
    display: grid;
    gap: var(--size-1);
  }

  .title {
    max-width: 32ch;
    color: var(--text1);
  }
  .article-card:hover .title {
    --brand: hsl(226 80% 60% / 1);
    color: var(--brand);
  }
  .desc {
    max-width: 30ch;
    min-width: 30ch;
    justify-self: start;
  }

  @media (min-width: 980px) {
    .desc {
      max-width: 32ch;
      min-width: 32ch;
    }
  }

  .date {
    justify-self: start;
    align-self: end;
    max-width: max-content;
  }
</style>
