---
import "../styles/style.css";
const { title, left, right } = Astro.props;
---

<div class:list={["title", { left, right }]}>
  <h2>{title}</h2>
</div>

<style>
  .title {
    display: grid;
  }
  .title h2 {
    font-size: var(--fs-fl-md);
    color: var(--on-surface);
  }
  @media (min-width: 950px) {
    .title {
      place-items: center;
      position: relative;
      z-index: 3;
    }
    .title h2 {
      width: 5ch;
      color: var(--on-primary);
    }
    .left::before,
    .left::after,
    .right::before,
    .right::after {
      content: "";
      position: absolute;
      z-index: -1;
      border-radius: 1rem;
      border: 1px solid var(--on-primary);
    }
    .left::before,
    .right::before {
      left: -2em;
      background: var(--primary);
      width: 15em;
      height: 15em;
    }
    .left::before {
      top: -4em;
      transform: rotate(48deg);
    }
    .right::before {
      top: -5em;
      transform: rotate(42deg);
    }
    .left::after,
    .right::after {
      left: -3em;
      border: 1px solid var(--tertiary);
      width: 17em;
      height: 17em;
    }
    .left::after {
      top: -5em;
      transform: rotate(42deg);
    }
    .right::after {
      top: -6em;
      transform: rotate(48deg);
    }
  }
</style>
