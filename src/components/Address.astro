---
import { Icon } from "astro-icon";
import Title from "./Title.astro";
import LocationMap from "./LocationMap.jsx";
---

<div class="main-wrap surface">
  <div class="section-title">
    <Title title="Our Office" left />
  </div>
  <div class="address">
    <p class="address-title">Head Quarter</p>
    <div class="address-item">
      <Icon pack="mdi" name="phone" />
      <p>+964 773 697 1165</p>
    </div>
    <div class="address-item">
      <Icon pack="mdi" name="email" />
      <p>info@harikar.org</p>
    </div>
    <div class="address-item">
      <Icon pack="mdi" name="office-building-marker" />
      <p>Australia St, Media Quarter, 99448 Duhok, KR-Iraq</p>
    </div>
  </div>
  <div class="map">
    <LocationMap />
  </div>
</div>

<style>
  .main-wrap {
    padding-block: 3rem;
    padding-inline: 1.25rem;
    display: grid;
    grid-template:
      "title" 0.2fr
      "address"
      "content" 2fr / 1fr;
    place-items: center;
    gap: 1.25rem;
  }

  @media (min-width: 480px) {
    .main-wrap {
      grid-template:
        "title ." 0.2fr
        "address content" 2fr / 1fr 1fr;
    }
  }

  @media (min-width: 950px) {
    .main-wrap {
      grid-template:
        "title address" 1fr
        ". address" 1fr
        "content content" 3fr / 1fr 2fr;
      padding-block: 15rem;
      padding-inline: 10rem;
      gap: 3rem;
      place-items: center;
    }
  }

  @media (min-width: 1600px) {
    .main-wrap {
      padding-inline: 15rem;
    }
  }

  .section-title {
    grid-area: title;
    place-self: start;
  }

  @media (min-width: 950px) {
    .section-title {
      place-self: center;
    }
  }

  .address {
    grid-area: address;
    display: grid;
    gap: 1rem;
    background-color: var(--surface-container);
    padding: 1rem;
    border-radius: 0.5rem;
    max-width: max-content;
  }

  .address-title {
    color: var(--on-surface);
    font-size: var(--fs-md);
    font-weight: 600;
  }

  .address-item {
    font-size: var(--fs-sm);
    color: var(--on-surface);
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .address-item > img {
    color: var(--on-surface);
  }

  .map {
    grid-area: content;
    width: 100%;
    height: 100%;
    border-radius: 0.5rem;
    background-color: var(--surface-container);
  }

  @media (min-width: 850px) {
    .map {
      width: 70%;
    }
  }

  [astro-icon] {
    width: 20px;
    height: 20px;
    color: var(--primary);
  }
</style>
