---
import { Icon } from "astro-icon";
import Title from "./Title.astro";
---

<div class="main-wrap surface1">
  <div class="section-title">
    <Title title="Our Office" left />
  </div>
  <div class="address">
    <p class="address-title">Head Quarter</p>
    <div class="address-item">
      <Icon pack="mdi" name="phone" />
      <p>+964 773 697 1165</p>
    </div>
    <div class="address-item">
      <Icon pack="mdi" name="email" />
      <p>info@harikar.org</p>
    </div>
    <div class="address-item">
      <Icon pack="mdi" name="office-building-marker" />
      <p>Australia St, Media Quarter, 99448 Duhok, KR-Iraq</p>
    </div>
  </div>
  <div class="content">
    <iframe
      title="Harikar location on a map"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3192.5994980935093!2d42.95007621529133!3d36.852066779937935!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40088da4b0434497%3A0x9553764be14279fd!2sHarikar%20NGO!5e0!3m2!1sen!2siq!4v1619420826611!5m2!1sen!2siq"
      width="100%"
      height="100%"
      style="border: 0"
      allowfullscreen=""
      loading="lazy"
    >
    </iframe>
  </div>
</div>

<style>
  .main-wrap {
    padding-block: var(--size-8);
    padding-inline: var(--size-4);
    display: grid;
    grid-template:
      "title" 0.2fr
      "address"
      "content" 2fr / 1fr;
    place-items: center;
    gap: var(--size-4);
  }

  @media (min-width: 480px) {
    .main-wrap {
      grid-template:
        "title ." 0.2fr
        "address content" 2fr / 1fr 1fr;
    }
  }

  @media (min-width: 950px) {
    .main-wrap {
      grid-template:
        "title address" 1fr
        ". address" 1fr
        "content content" 3fr / 1fr 2fr;
      padding-block: var(--size-12);
      padding-inline: var(--size-12);
      gap: var(--size-8);
      place-items: center;
    }
  }

  .section-title {
    grid-area: title;
    place-self: start;
  }

  @media (min-width: 950px) {
    .section-title {
      place-self: center;
    }
  }

  .address {
    grid-area: address;
    display: grid;
    gap: var(--size-3);
    background: var(--surface3);
    padding: var(--size-3);
    box-shadow: var(--shadow-2);
    border-radius: var(--radius-2);
    max-width: max-content;
  }

  .address-title {
    color: var(--text1);
    font-size: var(--font-size-fluid-1);
    font-weight: var(--font-weight-6);
  }

  .address-item {
    font-size: var(--font-size-fluid-0);
    color: var(--text2);
    display: flex;
    gap: var(--size-3);
  }

  .address-item > img {
    color: var(--text1);
  }

  .content {
    grid-area: content;
    width: 100%;
    height: 100%;
    border-radius: var(--radius-2);
    box-shadow: var(--shadow-2);
  }
  iframe,
  object,
  embed {
    max-width: 100%;
  }

  @media (min-width: 850px) {
    .content {
      width: 70%;
    }
  }

  [astro-icon] {
    width: 20px;
    height: 20px;
  }
</style>
