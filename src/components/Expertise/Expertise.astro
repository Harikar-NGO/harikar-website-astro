---
import Title from "@components/Title.astro";
import Experty from "@components/Expertise/Experty.astro";
import { getCollection } from "astro:content";

const expertise = await getCollection("expertise");
---

<div class="expertise-main-wrap">
  <div class="expertise-section-title">
    <Title title="Our Expertise" left />
  </div>
  <div class="expertise-content">
    <p class="expertise-content-title">
      We have expertise in a wide range of humanitarian and technical
      departments.
    </p>
    <div class="expertise-container">
      {expertise.map((item) => <Experty experty={item} />)}
    </div>
  </div>
</div>

<style>
  .expertise-main-wrap {
    padding-block: 3rem;
    padding-inline: 1rem;
    display: grid;
    grid-template:
      "title" 0.2fr
      "content" 2fr / 1fr;
    place-items: start;
    position: relative;
    gap: 1.25rem;
  }

  @media (min-width: 950px) {
    .expertise-main-wrap {
      grid-template: "title content" / 1fr 2fr;
      padding-block: 5rem;
      padding-inline: 3rem;
      gap: 3rem;
      place-items: center;
    }
  }

  @media (min-width: 1600px) {
    .expertise-main-wrap {
      padding-inline: 15rem;
    }
  }

  .expertise-section-title {
    grid-area: title;
    place-self: start;
  }

  @media (min-width: 950px) {
    .expertise-section-title {
      place-self: center;
    }
  }

  .expertise-content {
    grid-area: content;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    justify-items: center;
  }

  .expertise-content-title {
    font-size: var(--fs-fl-sm);
    font-weight: 600;
    max-inline-size: 25ch;
  }

  .expertise-container {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: start;
    gap: 0.5rem;
    position: relative;
    max-width: 35rem;
  }
</style>
