---
import ArticleCard from "./cards/ArticleCard.astro";
import Title from "./Title.astro";
import Tint from "./Tint.astro";
import MediaScroller from "./MediaScroller.astro";

const articles = await Astro.glob("../pages/events-and-stories/*.mdx");
---

<div class="main-wrap surface6">
  <div class="section-title">
    <Title title="Latest Stories" right />
  </div>
  <div class="container">
    <MediaScroller>
      {
        articles.map((article) => (
          <a class="link" href={article.url}>
            <ArticleCard
              title={article.frontmatter.title}
              img={article.frontmatter.img}
              date={article.frontmatter.date}
            />
          </a>
        ))
      }
    </MediaScroller>
  </div>
  <Tint white />
</div>

<style>
  .main-wrap {
    padding-block: var(--size-8);
    display: grid;
    grid-template:
      "title" 0.2fr
      "content" 2fr / 1fr;
    place-items: start;
    position: relative;
    gap: var(--size-4);
  }

  @media (min-width: 950px) {
    .main-wrap {
      grid-template: "content title" / 2fr 1fr;
      padding-block: var(--size-8);
      padding-right: var(--size-10);
      gap: var(--size-8);
      place-items: center;
    }
  }

  .section-title {
    grid-area: title;
    padding-left: var(--size-4);
  }

  .container {
    grid-area: content;
    overflow-x: hidden;
    max-width: 100%;
  }

  .media-scroller {
    --_spacer: var(--size-3);
    display: grid;
    grid-auto-flow: column;
    gap: var(--_spacer);
    grid-auto-columns: 22rem;
    padding-inline: var(--_spacer);
    padding-block: var(--_spacer);
    overflow-x: auto;
    overscroll-behavior-inline: contain;
  }

  .snaps-inline {
    scroll-snap-type: inline mandatory;
    scroll-padding-inline: var(--_spacer);
  }
  .snaps-inline > * {
    scroll-snap-align: start;
  }

  .link {
    text-decoration: none;
  }
</style>
