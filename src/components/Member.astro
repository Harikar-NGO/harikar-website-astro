---
const { img, alt, name, title, desc, right, left } = Astro.props;
---

<div class:list={["member", { right, left }]}>
  <div class="info">
    <div class="avatar">
      <img alt={alt} src={img} width="200" height="200" />
    </div>
    <div class="name">
      <p>
        <strong>{name}</strong>
      </p>
    </div>
    <div class="title">
      <p>{title}</p>
    </div>
  </div>
  <div class="desc">
    <div class="desc-text">
      <p>{desc}</p>
    </div>
  </div>
</div>

<style>
  .member {
    display: grid;
    grid-template: "info" "desc" / 1fr;
    gap: 1.75rem;
    place-content: space-around;
    place-items: center;
  }

  @media (min-width: 950px) {
    .member {
      gap: 5rem;
    }
    .left {
      grid-template: "info desc" / 1fr 3fr;
    }

    .right {
      grid-template: "desc info" / 3fr 1fr;
    }
  }

  .info {
    grid-area: info;
    display: grid;
    place-content: center;
    text-align: center;
    gap: 0.25rem;
  }

  .desc {
    grid-area: desc;
  }

  .desc-text > p {
    max-width: 60ch;
    font-size: var(--fs-sm);
    text-align: justify;
  }

  .name > p,
  .title > p {
    min-width: max-content;
    font-size: 1rem;
  }

  .avatar > img {
    border-radius: 50%;
  }
</style>
