    <li class="calendar__item">
      <a href="/reports/activity/2022/february">Feb</a>
    </li>
    <li class="calendar__item">
      <a href="/reports/activity/2022/march">Mar</a>
    </li>
    <li class="calendar__item">
      <a href="/reports/activity/2022/april">Apr</a>
    </li>
    <li class="calendar__item">
      <a href="/reports/activity/2022/may">May</a>
    </li>
    <li class="calendar__item">
      <a href="/reports/activity/2022/june">Jun</a>
    </li>
    <li class="calendar__item">
