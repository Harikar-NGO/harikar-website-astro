---
const { flipped, gray, white } = Astro.props;
---

<div class:list={["tint", { flipped }]}>
  <svg
    data-name="Layer 1"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 1200 120"
    preserveAspectRatio="none"
  >
    <path
      d="M1200 120L0 16.48 0 0 1200 0 1200 120z"
      class:list={[{ white, gray }]}></path>
  </svg>

  <style>
    .tint {
      display: none;
    }

    @media (min-width: 950px) {
      .tint {
        display: block;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
        transform: rotate(180deg);
      }

      .tint svg {
        position: relative;
        display: block;
        width: calc(159% + 1.3px);
        height: 50px;
      }

      .flipped svg {
        transform: rotateY(180deg);
      }

      .tint .white {
        fill: var(--surface1);
        stroke: var(--surface1);
      }
      .tint .gray {
        fill: var(--surface6);
        stroke: var(--surface6);
      }
    }
  </style>
</div>
