---
import MainLayout from "../layouts/MainLayout.astro";
import { Icon } from "astro-icon";
const items = [
  {
    name: "home",
    link: "/",
    disabled: false,
  },
  {
    name: "contact us",
    disabled: true,
  },
];
---

<MainLayout title="Contact us" crumbs={items}>
  <div class="main-wrap">
    <h2>Contact us</h2>
    <p>If you have any questions, Please leave us a message.</p>
    <form id="email-form">
      <label for="subject">Subject</label>
      <input
        id="subject"
        name="subject"
        type="text"
        value=""
        place-holder="message"
      />
      <label for="message">Message</label>
      <textarea id="message" name="message" rows="4" cols="60" value=""
      ></textarea>
      <a href="#" id="send-button" class="button"
        >Send message <Icon pack="mdi" name="send" />
      </a>
    </form>
  </div>
</MainLayout>

<script lang="js" is:inline>
  const sendButton = document.getElementById("send-button");
  const subjectInput = document.getElementById("subject");
  const messageInput = document.getElementById("message");

  const subject = subjectInput.value;
  const message = messageInput.value;

  sendButton.href = `mailto:info@harikar.org?subject=${subject}&body=${message}`;
</script>

<style>
  .main-wrap {
    display: grid;
    justify-items: center;
    align-content: start;
    gap: 3rem;
    padding-block: 5rem;
    padding-inline: 1.25rem;
    overflow-x: hidden;
  }

  p {
    max-width: 60ch;
    text-align: center;
  }

  form {
    display: grid;
    gap: 1.25rem;
  }

  label {
    color: var(--on-surface);
    font-weight: 600;
  }

  textarea,
  input {
    width: 100%;
    border: 1px solid var(--on-surface);
    padding: 0.5rem;
    color: var(--on-surface);
    background: var(--surface-container-high);
    border-radius: 0.5rem;
  }

  textarea {
    max-width: 100%;
  }

  h2 {
    color: var(--primary);
  }

  .button {
    text-decoration: none;
    font-size: var(--fs-xs);
    padding-inline: 1rem;
    padding-block: 0.7rem;
    border-radius: 0.5rem;
    background: var(--tertiary-container);
    color: var(--on-tertiary-container);
    font-weight: 600;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 3rem;
    transition: transform 150ms ease-out;
    max-width: max-content;
    justify-self: center;
  }

  .button:hover {
    transform: scale(1.1);
  }

  [data-icon] {
    width: 20px;
    height: 20px;
  }
</style>
